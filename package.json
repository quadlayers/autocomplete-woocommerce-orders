{
	"name": "autocomplete-woocommerce-orders",
	"description": "Autocomplete WooCommerce Orders",
	"main": "index.js",
	"scripts": {
		"tools:delete:lock": "node ./bin/delete.js ./.tools/composer.lock",
		"tools:delete:dependencies": "node ./bin/delete.js .tools/vendor",
		"tools:clean": "pnpm run tools:delete:lock && pnpm run tools:delete:dependencies",
		"tools:update": "cd .tools && composer update",
		"tools:start": "pnpm run tools:setup && cd .tools && composer dump-autoload",
		"tools:setup": "cd .tools && composer install",
		"tools:report:autofix": "php .tools/vendor/bin/phpcbf ./lib",
		"tools:report:txt": "php .tools/vendor/bin/phpcs --standard=./phpcs.xml --warning-severity=0 --report-file=./phpcs_error.txt --extensions=php ./",
		"tools:report:csv": "php .tools/vendor/bin/phpcs --standard=./phpcs.xml --warning-severity=0 --report-csv=./phpcs_error.csv --extensions=php ./",
		"tools:report:xml": "php .tools/vendor/bin/phpcs --standard=./phpcs.xml --warning-severity=0 --report-xml=./phpcs_error.xml --extensions=php ./",
		"tools:i18n": "php .tools/vendor/wp-cli/wp-cli/php/boot-fs.php i18n make-pot .plugin/autocomplete-woocommerce-orders .plugin/autocomplete-woocommerce-orders/languages/autocomplete-woocommerce-orders.pot && node ./bin/copy.js ./.plugin/autocomplete-woocommerce-orders/languages/autocomplete-woocommerce-orders.pot ./languages",
		"preinstall": "npx only-allow pnpm",
		"delete:build": "node ./bin/delete.js ./build",
		"delete:lock:js": "node ./bin/delete.js ./package-lock.json ./pnpm-lock.yaml",
		"delete:lock:php": "node ./bin/delete.js ./composer.lock ",
		"delete:lock": "pnpm run delete:lock:js && pnpm run delete:lock:php",
		"delete:dependencies:js": "node ./bin/delete.js ./node_modules",
		"delete:dependencies:php": "node ./bin/delete.js ./vendor ./jetpack_vendor",
		"delete:dependencies": "pnpm run delete:dependencies:js && pnpm run delete:dependencies:php",
		"delete:plugin": "node ./bin/delete.js ./.plugin",
		"delete:phpcs_error": "node ./bin/delete.js ./phpcs_error.csv ./phpcs_error.txt",
		"delete:playwright": "node ./bin/delete.js ./playwright-report ./playwright",
		"clean:js": "pnpm run delete:build && pnpm run delete:lock:js && pnpm run delete:dependencies:js && pnpm run delete:playwright",
		"clean:php": "pnpm run delete:lock:php && pnpm run delete:dependencies:php && pnpm run delete:phpcs_error && pnpm run delete:plugin",
		"clean": "pnpm run clean:js && pnpm run clean:php",
		"setup:js": "pnpm install --force && pnpm husky install && pnpm playwright install",
		"setup:php": "composer install && pnpm run tools:setup",
		"setup": "pnpm run clean && pnpm run setup:js && pnpm run setup:php",
		"update:js": "pnpm update",
		"update:php": "composer update && pnpm run delete:plugin",
		"update": "pnpm run update:js && pnpm run update:php",
		"format:js": "lint-staged && eslint --fix --ext .js,.jsx .",
		"format:php": "pnpm run tools:report:autofix",
		"format": "pnpm run format:js && pnpm run format:php",
		"test:unit:php": "cd .tools && composer run-script test:phpunit",
		"test:unit:js": "jest",
		"test:unit": "pnpm run test:unit:js && pnpm run test:unit:php",
		"test:e2e": "pnpm run docker start && playwright test",
		"test": "pnpm run test:unit && pnpm run test:e2e",
		"docker": "wp-env",
		"start:js": "pnpm run delete:build && wp-scripts start",
		"start:php": "pnpm run setup:php && composer dump-autoload",
		"start": "pnpm run start:php && pnpm run start:js",
		"build:js": "pnpm run delete:build &&  wp-scripts build",
		"build:php": "composer install --no-dev && composer dump-autoload -o --no-dev",
		"build": "pnpm run build:js && pnpm run build:php",
		"build:plugin": "pnpm run delete:plugin && pnpm run build && node ./bin/buildPlugin.js && pnpm run tools:i18n",
		"build:plugin:zip": "pnpm run build:plugin && node ./bin/buildPluginZip.js",
		"build:plugin:wc": "pnpm run delete:plugin && pnpm run build && node ./bin/buildPlugin.js --wc && pnpm run tools:i18n",
		"build:plugin:wc:zip": "pnpm run build:plugin:wc && node ./bin/buildPluginZip.js"
	},
	"author": "QuadLayers",
	"license": "ISC",
	"devDependencies": {
		"@playwright/test": "^1.36.1",
		"@wordpress/env": "^5.16.0",
		"@wordpress/eslint-plugin": "^14.11.0",
		"@wordpress/prettier-config": "^2.21.0",
		"@wordpress/scripts": "^23.7.2",
		"@wordpress/stylelint-config": "^21.21.0",
		"classnames": "^2.3.2",
		"css-loader": "^6.8.1",
		"depcheck": "^1.4.3",
		"eslint": "^8.45.0",
		"eslint-plugin-n": "^15.7.0",
		"eslint-plugin-promise": "^6.1.1",
		"husky": "^8.0.3",
		"jest": "^29.6.1",
		"lint-staged": "^13.2.3",
		"mini-css-extract-plugin": "^2.7.6",
		"node-sass-glob-importer": "^5.3.3",
		"only-allow": "^1.1.1",
		"prettier": "2.8.1",
		"sass-loader": "^13.3.2",
		"stylelint": "^14.16.1",
		"stylelint-config-standard": "^29.0.0",
		"webpack": "^5.88.2",
		"webpack-remove-empty-scripts": "^0.8.4",
		"wp-scaffolding": "^1.2.1"
	},
	"scaffolding": {
		"zip": [
			"jetpack_vendor",
			"lib",
			"vendor",
			"vendor_packages",
			"build",
			"languages",
			"compatibility",
			"templates",
			"assets",
			"wpml-config.xml",
			"main.php",
			"autocomplete-woocommerce-orders.php",
			"uninstall.php",
			"readme.txt",
			"changelog.txt"
		],
		"git": [
			".design",
			".todo",
			".design",
			".github",
			".docs"
		]
	}
}
